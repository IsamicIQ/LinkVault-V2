{
  "manifest_version": 3,
  "name": "LinkVault",
  "version": "1.0.0",
  "description": "Save links to LinkVault with one click",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://hwcixfsxatizosadsnxo.supabase.co/*",
    "http://localhost:3001/*",
    "https://localhost:3001/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost:3001/*", "https://localhost:3001/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}

